{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <!-- ======= Appointment Section ======= -->
    <section id="appointment" class="appointment section-bg">
      <div class="container">
 <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">
            <br><br><br>
        <div class="section-title">
          <h2>Panneau d'administration</h2>
          <p>Uniquement pour l'administrateur du site.</p>
        </div>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            
        </div>
                        <a href="{{ path('display_admin') }}"><i class="" style="font-size: 50px;"></i>Panneau d'administration</a>

{% else %}
    <div class="form-outline mb-4">
    <input type="text" name="username" id="inputUsername" class="form-control" autocomplete="username" placeholder="Utilisateur" required autofocus>
    <div class="validate"></div></div>
    <div class="form-group mt-3">
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Mot de passe" required>
<div class="validate"></div>
          </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
<br>
    <button class="btn btn-lg btn-primary" type="submit">
        Connexion
    </button>
        {% endif %}
</form>
</div></section>
{% endblock %}
